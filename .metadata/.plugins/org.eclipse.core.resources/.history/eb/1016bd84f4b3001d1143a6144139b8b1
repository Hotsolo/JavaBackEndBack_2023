package chapter2.B_Swich;

import java.util.Scanner;

//비교핧 변수를 case 값과 비교하여 같은 case를 찾아 해당 case 구문부터 끝까지 실행
//break 문으로 해당 switch를 종료
// default 조건이 일치하는 값이 없을 경우 실행
public class Switch {

	public static void main(String[] args) {
		
//		// switch statement
//		switch (비교할 대상) {
//		  case 값1:
//		    // 조건이 값1과 같을 경우 실행
//		  case 값2:
//		    // 조건이 값2와 같을 경우 실행  
//		    break;
//		  default:
//		    // 조건이 일치하는 값이 없을 경우 실행
		
		
		int switchNumber = 0;
		
		
		switch (switchNumber) {
		case 8:
			System.out.println("이숫자는 8이다");
		case 0:
			System.out.println("0");
		case 3:	
			System.out.println("3");
			break;
		default:
			System.out.println("일치하든 안하든 실행할 코드");
		}
		
		//switch 문은 조건에 따라서 코드 실행 범위를 지정하는 것
		Scanner scanner = new Scanner(System.in);
		
		int chapter = scanner.nextInt();
		
		switch (chapter) {
		case 1:
			System.out.println("기본 문법 공부");
		case 2:
			System.out.println("제어문 공부");
			break;
		case 3:
			System.out.println("객체 지향 공부");
		case 4:
			System.out.println("객체 지향 응용 공부");
		case 5:
			System.out.println("자바 고급 공부");
			break;
		default:
			System.out.println("범위 초과");
		}
		
		
		
		

	}

}
