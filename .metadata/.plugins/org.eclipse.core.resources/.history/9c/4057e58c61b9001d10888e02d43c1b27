package chapter3.D_Constructor;

// 생성자
// 인스턴스가 생성될 때 호출되는 인스턴스 '초기화 매서드'
// 인스턴스 변수의 초기화 작업에 사용
// 인스턴스 생성시에 실행되어야 할 작업을 작성하는 위치

class Circle {
	
	
	double raidus;
	double diameter;
	double circumference;
	double area;
	
	
	
	
}



public class Constructor {

	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Circle circle1 = new Circle(); //생성시 0으로 초기화하는 매서드
		//원래라면 이렇게 초기화 해야함
		circle1.raidus = 10;
		circle1.diameter = 20;
		circle1.circumference = 62.8;
		circle1.area = 314;
		//생성하고 초기화
		
		
	}
	
	
	
	
	
	
	

}
