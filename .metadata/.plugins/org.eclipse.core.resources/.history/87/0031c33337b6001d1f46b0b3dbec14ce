package chapter2.C_For;

public class For {

	public static void main(String[] args) {
		

		
		
		
		
		int sum =0;
		for (int i = 0; i<10 ; i++) {
			sum += i;
		}
		System.out.println(sum);
		
		
		
		
		
		
		int[] number = new int[10];
		
		for (int i = 0; i < number.length; i++) {
		  number[i] = i + 1;
		}
		
//		 for each 문 형식
//		for(변수 선언 : 배열) {
//		    배열에 남은 요소가 존재할 때 실행되는 코드
//		}
		
		
		for (int i : number) {
		  System.out.println(i);
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
